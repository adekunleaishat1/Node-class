<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <title>Document</title>
    <style>
        .ii{
            height: 100px;
        }
        .iii{
            width: 40%;
            height: 40px;
        }
    </style>
</head>
<body>
    <main class="container">
        <div class="row w-50 mx-auto ">
            <div class="col w-50 card px-5">
                <div class="d-flex justify-content-center align-items-center mt-5">
                    <h2 class=" mx-auto text-muted">Shopping List</h2>
                </div>
                <form class="w-100" action="/shopping" method="post" >
                    <input class="w-100 form-control my-2" name="item" type="text" placeholder="Item">
                    <input class="w-100 form-control my-2" name="price" type="number" placeholder="Price" oninput="calculateSubtotal()">
                    <input class="w-100 form-control my-2" name="quantity" type="number" placeholder="Quantity" oninput="calculateSubtotal()">
                    <input class="w-100 form-control my-2" name="subtotal" type="number" placeholder="subtotal">
                    <button class="btn btn-success m-3">Submit</button>
                </form>
            </div>
        </div>
        <div class=" my-4 d-flex justify-content-center align-items-center flex-column ">
            <% for( let i=0; i < shoppingarray.length; i++ ) { %>
                <div class="card w-50 my-2">
                    <p class="m-3">Item: <%= shoppingarray[i].item %></p>
                    <p class="m-3">Price: <%= shoppingarray[i].price %></p>
                    <p class="m-3">Quantity: <%= shoppingarray[i].quantity %></p>
                    <p class="m-3">Subtotal: <%= shoppingarray[i].subtotal %></p>
                    
                    <div class="d-flex m-3">
                        <form action="/shopping" method="post">
                            <input type="hidden" name="index" value="<%= shoppingarray[i]._id%>">
                            <button class="btn btn-dark">Delete</button>
                        </form>
                        <form action="/shopEdit<%= shoppingarray[i]._id %>" method="get">
                            <button class="btn btn-dark mx-3">Edit</button>
                        </form>
                    </div>
                </div>
                <% } %>
         </div>
    </main>
    <div class="w-25 p-5 m-3 border rounded border shadow">
        <p>Total:  </p>
    </div>
</body>
</html>
<script>
     function calculateSubtotal() {
    var price = document.getElementsByName('price')[0].value;
    var quantity = document.getElementsByName('quantity')[0].value;

    // Calculate the subtotal
    var subtotal = price * quantity;

    // Update the subtotal field
    document.getElementsByName('subtotal')[0].value = subtotal;
  }
</script>